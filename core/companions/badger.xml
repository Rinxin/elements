<?xml version="1.0" encoding="utf-8" ?>
<elements>
	<info>
		<name>Companions</name>
		<description>Companion creatures from the Player’s Handbook.</description>
		<author url="http://dnd.wizards.com/products/tabletop-games/rpg-products/rpg_playershandbook">Wizards of the Coast</author>
		<update version="0.0.3">
			<file name="badger.xml" url="https://raw.githubusercontent.com/Rinxin/elements/master/core/companions/badger.xml" />
		</update>
	</info>

	<element name="Badger" type="Companion" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_BADGER">
		<description />
		<setters>
			<set name="strength">4</set>
			<set name="dexterity">11</set>
			<set name="constitution">12</set>
			<set name="intelligence">2</set>
			<set name="wisdom">12</set>
			<set name="charisma">5</set>
			<set name="ac">10</set>
			<set name="hp">3 (1d4+1)</set>
			<set name="speed">20 ft., burrow 5 ft.</set>
			<set name="senses">darkvision 30 ft.</set>
			<set name="languages">—</set>
			<set name="type">Beast</set>
			<set name="size">Tiny</set>
			<set name="alignment">unaligned</set>
			<set name="challenge">0</set>
			<set name="traits">ID_WOTC_PHB_COMPANION_TRAIT_BADGER_KEEN_SMELL</set>
			<set name="actions">ID_WOTC_PHB_COMPANION_ACTION_BADGER_BITE</set>
		</setters>
		<rules>
			<stat name="companion:ac" value="10" />
			<stat name="companion:hp:max" value="3" bonus="base" />
			<stat name="companion:speed" value="20" bonus="base" />
			<stat name="companion:speed:burrow" value="5" bonus="base" />
		</rules>
	</element>
	<element name="Keen Smell" type="Companion Trait" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_TRAIT_BADGER_KEEN_SMELL">
		<description>
			<p>The badger has advantage on Wisdom (Perception) checks that rely on smell.</p>
		</description>
		<sheet>
			<description>The badger has advantage on Wisdom (Perception) checks that rely on smell.</description>
		</sheet>
	</element>
	<element name="Bite" type="Companion Action" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_ACTION_BADGER_BITE">
		<description>
			<p>Melee Weapon Attack: +2 to hit, reach 5 ft., one target. Hit: 1 piercing damage.</p>
		</description>
		<sheet>
			<description>Melee Weapon Attack: +2 to hit, reach 5 ft., one target. Hit: 1 piercing damage.</description>
		</sheet>
	</element>
	<element name="Bat" type="Companion" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_BAT">
		<supports>Familiar</supports>
		<description />
		<setters>
			<set name="strength">2</set>
			<set name="dexterity">15</set>
			<set name="constitution">8</set>
			<set name="intelligence">2</set>
			<set name="wisdom">12</set>
			<set name="charisma">4</set>
			<set name="ac">12</set>
			<set name="hp">1 (1d4-1)</set>
			<set name="speed">5 ft., fly 30 ft.</set>
			<set name="senses">blindsight 60 ft.</set>
			<set name="languages">—</set>
			<set name="type">Beast</set>
			<set name="size">Tiny</set>
			<set name="alignment">unaligned</set>
			<set name="challenge">0</set>
			<set name="traits">ID_WOTC_PHB_COMPANION_TRAIT_BAT_ECHOLOCATION,ID_WOTC_PHB_COMPANION_TRAIT_BAT_KEEN_HEARING</set>
			<set name="actions">ID_WOTC_PHB_COMPANION_ACTION_BAT_BITE</set>
		</setters>
		<rules>
			<stat name="companion:ac" value="12" />
			<stat name="companion:hp:max" value="1" bonus="base" />
			<stat name="companion:speed" value="5" bonus="base" />
			<stat name="companion:speed:fly" value="30" bonus="base" />
		</rules>
	</element>
	<element name="Echolocation" type="Companion Trait" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_TRAIT_BAT_ECHOLOCATION">
		<description>
			<p>The bat can't use its blindsight while deafened.</p>
		</description>
		<sheet>
			<description>The bat can't use its blindsight while deafened.</description>
		</sheet>
	</element>
	<element name="Keen Hearing" type="Companion Trait" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_TRAIT_BAT_KEEN_HEARING">
		<description>
			<p>The bat has advantage on Wisdom (Perception) checks that rely on hearing.</p>
		</description>
		<sheet>
			<description>The bat has advantage on Wisdom (Perception) checks that rely on hearing.</description>
		</sheet>
	</element>
	<element name="Bite" type="Companion Action" source="Player’s Handbook" id="ID_WOTC_PHB_COMPANION_ACTION_BAT_BITE">
		<description>
			<p>Melee Weapon Attack: +0 to hit, reach 5 ft., one creature. Hit: 1 piercing damage.</p>
		</description>
		<sheet>
			<description>Melee Weapon Attack: +0 to hit, reach 5 ft., one creature. Hit: 1 piercing damage.</description>
		</sheet>
	</element>
</elements>