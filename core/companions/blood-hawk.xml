			<set name="traits">ID_WOTC_PHB_COMPANION_TRAIT_BLOOD_HAWK_KEEN_SIGHT,ID_WOTC_PHB_COMPANION_TRAIT_BLOOD_HAWK_PACK_TACTICS</set>
