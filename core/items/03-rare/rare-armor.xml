<!--Armor-->
	<!--+-->
		<element name="Armor, +1" type="Magic Item" source="Dungeon Master’s Guide" id="ID_WOTC_DMG_MAGIC_ITEM_ARMOR_1">
			<description>
				<p>You have a bonus to AC while wearing this armor. The bonus is determined by its rarity.</p>
			</description>
			<setters>
				<set name="category">Magic Armor</set>
				<set name="cost" currency="gp">0</set>
				<set name="slot">body</set>
				<set name="type" addition="light, medium, or heavy">Armor</set>
				<set name="rarity">Rare</set>
				<set name="enhancement">1</set>
				<set name="armor">ID_INTERNAL_ARMOR_GROUP_LIGHT|ID_INTERNAL_ARMOR_GROUP_MEDIUM|ID_INTERNAL_ARMOR_GROUP_HEAVY</set>
				<set name="name-format">{{parent}} +{{enhancement}}</set>
			</setters>
			<rules>
				<stat name="ac:armored:enhancement" value="1" bonus="enhancement" />
			</rules>
		</element>
		<element name="Shield, +2" type="Magic Item" source="Dungeon Master’s Guide" id="ID_WOTC_DMG_MAGIC_ITEM_SHIELD_2">
			<description>
				<p>While holding this shield, you have a bonus to AC determined by the shield's rarity. This bonus is in addition to the shield's normal bonus to AC.</p>
