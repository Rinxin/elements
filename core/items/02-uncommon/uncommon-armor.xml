<!--Armor-->
	<!--+-->
		<element name="Shield, +1" type="Magic Item" source="Dungeon Master’s Guide" id="ID_WOTC_DMG_MAGIC_ITEM_SHIELD_1">
			<description>
				<p>While holding this shield, you have a bonus to AC determined by the shield's rarity. This bonus is in addition to the shield's normal bonus to AC.</p>
			</description>
			<setters>
				<set name="keywords">shield</set>
				<set name="category">Magic Armor</set>
				<set name="cost" currency="gp">0</set>
				<set name="type" addition="shield">Armor</set>
				<set name="rarity">Uncommon</set>
				<set name="enhancement">1</set>
				<set name="armor">ID_INTERNAL_ARMOR_GROUP_SHIELD</set>
				<set name="name-format">{{parent}} +{{enhancement}}</set>
			</setters>
			<rules>
				<stat name="ac:shield" value="1" bonus="enhancement" />
			</rules>
		</element>
	<!--A-->
		<element name="Adamantine Armor" type="Magic Item" source="Dungeon Master’s Guide" id="ID_WOTC_DMG_MAGIC_ITEM_ADAMANTINE_ARMOR">
			<supports>Armor</supports>
			<description>
				<p>This suit of armor is reinforced with adamantine, one of the hardest substances in existence. While you're wearing it, any critical hit against you becomes a normal hit.</p>
			</description>
			<setters>
				<set name="keywords">medium, heavy</set>
				<set name="category">Magic Armor</set>
				<set name="cost" currency="gp">0</set>
				<set name="slot">body</set>
				<set name="type" addition="medium or heavy, but not hide">Armor</set>
				<set name="rarity">Uncommon</set>
				<set name="armor">(ID_INTERNAL_ARMOR_GROUP_MEDIUM||ID_INTERNAL_ARMOR_GROUP_HEAVY),!Hide</set>
				<set name="name-format">Adamantine {{parent}}</set>
			</setters>
		</element>
